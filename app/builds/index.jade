extends ../layout

mixin build-loop(count)
  - n = 0
  while n < count
    +build(random.company.catchPhrase())
    - n++

mixin build(name)
  li.item
    .left
      .vote= Math.floor(Math.random() * (400 - 17)) + 17
    .content
      .title
        a(href="/builds/show")= name
      .stats
        +stat("Vitality", 10)
        +stat("Endurance", 10)
        +stat("Strength", 10)
        +stat("Skill", 10)
        +stat("Bloodtinge", 10)
        +stat("Arcane", 10)
      // .summary
      //   p= random.lorem.paragraph()
      
    .right
      .comments= Math.floor(Math.random() * 457)

    

mixin stat(name, value)
  span.stat
    span.label= name
    span.value= value

block content
  .row
    .small-12.columns
      ul.panel-list.builds
        +build-loop(30)
